{
    "compilerOptions": {
      "target": "ES2016",
      "moduleResolution": "node", 
      "outDir": "./js",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "*": ["*", "*.ts", "*.js", "*.json"]
      }
    },
    "include": [
      "src/**/*.ts"
    ]
  }